{"name": "Race Results",
 "permissions": {"network": "Needs to recive the csv files"},
 "options":[
    {"title": "Genral settings",
    "type": "section"
    },
    {"title": "Scrolling Text",
    "name": "scroller_text",
    "hint": " Text to display in the scroller at the top of the screens",
    "type": "string",
    "default": "Race Results"},
    {"title": "scroller Mode",
    "name": "scroller_mode",
    "hint": "Select the mode you want the scroller to use",
    "ui_width": 6,
    "type": "select",
    "options": [
         ["OFF", "Off"],
         ["SCROLLER", "Scrolling text"],
         ["INFO" ,"Device information"]
       ],
    "default": "SCROLLER"
    },
    {"title": "result Mode",
    "name": "result_mode",
    "hint": "Select the mode you want the result aera to use",
    "ui_width": 6,
    "type": "select",
    "options": [
         ["OFF", "Off - blanc Screen"],
         ["RESULT", "Display results"],
         ["PIC", "Picture"],
         ["INFO" ,"Device information"]
       ],
     "default": "RESULT"
     },
     {"title": "Sroller settings",
     "type": "section"
     },
     {"title": "Scrolling Separator",
     "name": "scroller_space",
     "ui_width": 3,
     "hint": "text to be added as a separator in the scroller, will be added to the end of the scrolling text",
     "type": "string",
     "default": " --- "},
     {"title": "Scrolling Speed",
     "name": "scroller_speed",
     "hint": "Speed as the scrolling text, negatief values for test scrolling to the left , positief values text scrolleing to the right",
     "ui_width": 3,
     "type": "integer",
     "default": -10},
     {"title": "Scrolling Size",
     "name": "scroller_size",
     "hint": "Fontsize of the scrolling text",
     "ui_width": 3,
     "type": "integer",
     "default": 200},
     {"title": "Scroller font",
     "ui_width": 3,
     "name": "scroller_font",
     "type": "font",
     "default": "font.ttf"
     },
     {"title": "Result page settings",
     "type": "section"
     },
     {"title": "Result size",
     "name": "result_size",
     "hint": "Fontsize of for the results",
     "ui_width": 3,
     "type": "integer",
     "default": 40},        
     {"title": "Result font",
     "ui_width": 3,
     "name": "result_font",
     "type": "resource",
     "valid": ["font"],
     "default": "font.ttf"
     },
     {"title": "Logo",
     "ui_width": 3,
     "name": "result_logo",
     "type": "resource",
     "valid": ["jpg"]
     },  
     {"title": "Screen settings",
     "type": "section"
     }, 
     {"title": "Screen details",
     "name": "screenlist",
     "type": "list",
     "itemname": "Screen",
     "items": [
        {"title": "Screen",
        "ui_width": 5,
        "name": "screen_id",
        "type": "device"
        },
        {"title": "Screen Orientation",
        "hint" : "Set the oritantion running clock wize", 
        "ui_width": 4,
        "name": "screenoriantation",
        "type" : "select",
        "default" : 90,
         "options":[
                 [0, "0"],
                 [90, "90"],
                 [180, "180"],
                 [270 ,"270"]
                ]
        },   
        {"title": "Screen Width",
        "hint" : "Width of this screen, screen will allways run in native width, this value is used to strech the scroller correctly over all screens", 
        "ui_width": 3,
        "name": "screenwidth",
        "type" : "integer",
        "default" : 1080
        },
        {"title": "Results Files",
        "name": "resultfiles",
        "ui_width": 3, 
        "type": "list",
        "itemname": "Resultfile",
        "items": [
            {"title": "File Name",
            "name": "filename",
            "type": "select",
            "options":[
                 ["MM.csv", "MM.csv"],
                 ["MJ.csv", "MJ.csv"],
                 ["PM.csv", "PM.csv"],
                 ["PJ.csv" ,"PJ.csv"],
                 ["SM.csv", "SM.csv"],
                 ["SJ.csv", "SJ.csv"],
                 ["CM.csv", "CM.csv"],
                 ["CJ.csv" ,"CJ.csv"],
                 ["JD.csv", "JD.csv"],
                 ["JH.csv" ,"JH.csv"]             
            ],
            "default":"Menimen_jongens.csv"
            }]
        }]
     }                
    ]
}
